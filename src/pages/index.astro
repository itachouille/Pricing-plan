---
import Layout from '../layouts/Layout.astro';
import { PRICING_PLAN } from '../data';
---

<Layout>
	<button class="mt-8 py-1 px-8 rounded-full link border border-[#97BAFF]/40">
		<span class="bg-text-gradient bg-clip-text text-transparent text-sm ">Nos offres</span>
	</button>
	<h1 class="text-center mt-4 leading-snug text-white text-4xl lg:text-5xl font-bold">Des prix en accord avec<br/>
		<span class="text-transparent bg-clip-text bg-gradient-to-r from-[#88B3FD] to-[#043BCB] font-bold">notre vision</span>
	</h1>
	<div class="flex flex-col gap-5 mt-6 lg:flex-row">
		<a href="#" class="flex items-center justify-center px-12 py-2 border border-[#FFFFFF]/40 text-[#FFFFFF] text-lg font-medium bg-gradient-to-b from-[#0A308B] to-[#1E6EFB] rounded-lg">Paiement Mensuel</a>
		<a href="#" class="flex items-center justify-center px-10 py-2 border border-[#FFFFFF]/40 text-[#FFFFFF] text-lg font-medium bg-transparent rounded-lg">Paiement Annuel (-20%)</a>
	</div>
	<div class="flex flex-col lg:flex-row gap-6 mt-8">
		{PRICING_PLAN.map((plan) => (
			  <div class={plan.mostPopular ? "card-most-popular" : "card"}>
				<img src={plan.icon} alt={plan.title}/>
				<div class="flex items-center mt-4 gap-2">
					<h3 class="font-medium text-4xl">{plan.title}</h3>
					{plan.mostPopular && <span class="px-2 py-1 rounded-md text-xs bg-white/20 border border-white">Best offer</span>}
				</div>
				<p class="text-4xl font-medium mt-4">${plan.price}<span class="text-base"> /month</span></p>
				<div class="h-px w-[90%] bg-gradient-to-r from-transparent via-white/80 to-transparent mx-auto my-6" />
					<ul>
						{plan.features.map((feature) => (
							<li class={plan.mostPopular ? "flex items-center gap-2 mb-4 text-lg" : "flex items-center gap-2 mb-3"}>
								<img src="./check.svg" alt="check icon" class="size-5" />
								{feature}
							</li>
						))
						}
					</ul>
					{plan.description && <p>{plan.description}</p>}
					<div class="flex mt-8">
						<a href="#" class={plan.mostPopular ? "btn" : "btn-ghost"}>{plan.cta}</a>
					</div>
				</div>
		))}
	</div>
</Layout>